#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main()
{
    char str[3][30];
    for(int i=0;i<3;i++)
    {
        printf("Input String %d: ",i);
        fgets(str[i],30,stdin);
    }
    
    char first[30],last[30];
    strcpy(first,str[0]);
    if(strcmp(first,str[1])<0)
        strcpy(first,str[1]);
    if(strcmp(first,str[2])<0)
        strcpy(first,str[2]);
    strcpy(last,str[0]);
    if(strcmp(last,str[1])>0)
        strcpy(last,str[1]);
    if(strcmp(last,str[2])>0)
        strcpy(last,str[2]);
    printf("The first word is:%s",first);
    printf("The last word is:%s",last);

    strcat(first,last);

    printf("Concatenate 2 strings:%s",first);
    for(int i = strlen(first)-1;i>=0;i--)
    {
        if(first[i]=='a'||first[i]=='e'||first[i]=='i'||first[i]=='o'||first[i]=='u')
        {
            printf("%c",toupper(first[i]));
            continue;
        }
        printf("%c",first[i]);
    }

    return 0;

}
